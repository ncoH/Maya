<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<!--version="1.0" encoding="utf-8" standalone="yes"-->
<window>
  <controls>
    <control>
      <description>BG</description>
      <type>image</type>
      <id>1</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1920</width>
      <height>1080</height>
      <texture>background.png</texture>
    </control>
    <control>
      <description>Alternate BG</description>
      <type>image</type>
      <id>1</id>
      <width>1920</width>
      <height>1080</height>
      <texture>background_thumbs.png</texture>
      <visible>[facadeview.smallicons|facadeview.largeicons]+!control.isvisible(47)</visible>
    </control>
    <control>
      <description>Alternate BG</description>
      <type>image</type>
      <id>1</id>
      <width>1920</width>
      <height>1080</height>
      <texture>background_filmstrip.png</texture>
      <visible>facadeview.filmstrip+!control.isvisible(47)</visible>
    </control>
    <control>
      <description>Fanart Background</description>
      <type>image</type>
      <id>1</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1920</width>
      <height>1080</height>
      <texture>#header.background</texture>
      <visible>string.contains(#MayaHD.bgImage.Plugins,yes)</visible>
    </control>
    <control>
      <description>Fanart Overlay</description>
      <type>image</type>
      <id>1</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1920</width>
      <height>1080</height>
      <texture>basichome_fanart_overlay.png</texture>
      <visible>facadeview.list+string.contains(#MayaHD.bgImage.Plugins,yes)</visible>
    </control>
    <control>
      <description>Fanart Overlay</description>
      <type>image</type>
      <id>1</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1920</width>
      <height>1080</height>
      <texture>fanart_overlay_thumbs.png</texture>
      <visible>facadeview.smallicons|facadeview.largeicons|facadeview.filmstrip+string.contains(#MayaHD.bgImage.Plugins,yes)</visible>
    </control>
    <control>
      <description>Selected item Label</description>
      <type>fadelabel</type>
      <id>1</id>
      <posX>778</posX>
      <posY>199</posY>
      <width>931</width>
      <label>#selecteditem</label>
      <font>Segoe Light22</font>
      <valign>middle</valign>
      <visible>[!facadeview.filmstrip+!facadeview.smallicons+!facadeview.largeicons]+!control.isvisible(47)</visible>
      <animation effect="fade" time="200">WindowOpen</animation>
      <animation effect="fade" time="200">WindowClose</animation>
    </control>
    <control>
      <description>Selected item Label</description>
      <type>fadelabel</type>
      <id>1</id>
      <posX>0</posX>
      <posY>199</posY>
      <width>1920</width>
      <label>#selecteditem</label>
      <font>Segoe Light22</font>
      <align>center</align>
      <visible>[facadeview.filmstrip|facadeview.smallicons|facadeview.largeicons]+!control.isvisible(47)</visible>
      <animation effect="fade" time="200">WindowOpen</animation>
      <animation effect="fade" time="200">WindowClose</animation>
      <valign>middle</valign>
    </control>
    <control>
      <description>Selected item Label</description>
      <type>fadelabel</type>
      <id>1</id>
      <posX>0</posX>
      <posY>632</posY>
      <width>1920</width>
      <label>#selecteditem</label>
      <font>Segoe Light22</font>
      <align>center</align>
      <visible>control.isvisible(47)+Control.IsVisible(50)</visible>
      <animation effect="fade" time="200">WindowOpen</animation>
      <animation effect="fade" time="200">WindowClose</animation>
    </control>
  </controls>
</window>